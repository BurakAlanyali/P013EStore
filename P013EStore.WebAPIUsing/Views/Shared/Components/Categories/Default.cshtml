@model IEnumerable<Category>

@{
	foreach (var anakategori in Model.Where(x=>x.IsActive && x.IsTopMenu && x.ParentId==0))
	{
		<div class="dropdown">
			<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
				@anakategori.Name
			</a>

			<ul class="dropdown-menu">
				
				@foreach (var altkategori in Model.Where(x => x.IsActive && x.IsTopMenu && x.ParentId == anakategori.Id))
				{
					<li><a class="dropdown-item" href="/Categories/Index/@altkategori.Id">@altkategori.Name</a></li>
				}
			</ul>
		</div>
	}
}